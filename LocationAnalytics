<div id="map"></div>

<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
    var map = L.map('map').setView([0, 0], 2); // Set your initial coordinates and zoom level

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Â© OpenStreetMap contributors'
    }).addTo(map);

    // Replace 'path/to/your/tiff/file.tif' with the actual path to your TIFF file
    var tiffUrl = 'path/to/your/tiff/file.tif';

    var tiff = L.imageOverlay(tiffUrl, [
        [90, -180],
        [-90, 180]
    ]).addTo(map);
</script>

